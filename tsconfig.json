{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "strict": false,
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "esModuleInterop": true,
    "sourceMap": true,
    "stripInternal": true,
    "declarationDir": "dist/types",
    "outDir": "dist/esm5",
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
